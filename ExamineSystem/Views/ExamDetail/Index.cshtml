@using ExamineSystem.Models.ExamModel;
@model IList<ExamLineEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
<link rel="stylesheet" href="~/Content/answer.css"/>
@{int i = 1;} 
@foreach (var item in Model)
{
    <div class="conc single" id="16939" qid="16939" qnum="11">
        <div class="question">
            @i、<span>(单选题)</span>
            @item.ExamContent
        </div>
        <div class="choose">
            <p value="0"><span>A、</span>@item.OptionA</p>
            <p value="1"><span>B、</span>@item.OptionB</p>
            <p value="2"><span>C、</span>@item.OptionC</p>
            <p value="3"><span>D、</span>@item.OptionD</p>
        </div>
        <div class="abcd">
            <input name="questions[@item.Id]" class="block_5170" type="hidden">
            <ul>
                <li class="option" value="0" data-block="block_5170"><em>&nbsp;</em><a>A</a></li>
                <li class="option" value="1" data-block="block_5170"><em>&nbsp;</em><a>B</a></li>
                <li class="option" value="2" data-block="block_5170"><em>&nbsp;</em><a>C</a></li>
                <li class="option" value="3" data-block="block_5170"><em>&nbsp;</em><a>D</a></li>
                <div class="clear"></div>
            </ul><span class="collect_url" del_collect_url="#"
                       collect_url="#">
                <p class="house">
                    <em class="store">&nbsp;</em> <a class="collect">收藏试题</a>
                </p>
            </span>
        </div>
    </div>
    i++;
}


